<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SocialMedia</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/SocialMedia.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.css" />
    @await RenderSectionAsync("Styles", false)
</head>
<body>
    <header>
        @* <nav class="navbar fixed-top navbar-expand-sm navbar-toggleable-sm navbar-dark box-shadow mb-3" style="background-color: #141414;">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">SocialMedia</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        @if (this.User.Identity?.IsAuthenticated ?? false)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Post" asp-action="Add">Add Post</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Post" asp-action="Mine">My Posts</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Post" asp-action="Liked">Liked Posts</a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Contact">Contact Us</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav> *@

        <nav class="fixed-top navbar navbar-expand-xxl navbar-dark" style="background-color: #141414;">
            <div class="container-fluid">
                @if (!this.User.IsInRole("Administrator"))
                {
                    <a class="navbar-brand" asp-controller="Home" asp-action="Index">SocialMedia</a>
                }
                else
                {
                    <a class="navbar-brand" asp-controller="Home" asp-action="Dashboard">SocialMedia</a>
                }
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        @if (this.User.IsInRole("Administrator") == false)
                        {
                            <li class="nav-item my-xxl-0" style="margin-top: 10px;">
                                <a class="nav-link text-dark p-2" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark p-2" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                            </li>
                        }
                        
                        @if (this.User.IsInRole("Administrator") == false && this.User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark p-2" asp-area="" asp-controller="Post" asp-action="Add">Add Post</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark p-2" asp-area="" asp-controller="Post" asp-action="Mine">My Posts</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark p-2" asp-area="" asp-controller="Post" asp-action="Liked">Liked Posts</a>
                            </li>
                        }
                        @if (this.User.IsInRole("Administrator"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark p-2" asp-area="Admin" asp-controller="Home" asp-action="Dashboard">Dashboard</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark p-2" asp-area="Admin" asp-controller="Report" asp-action="All">Reports</a>
                            </li>
                        }

                        @if (this.User.IsInRole("Administrator") == false)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark p-2" asp-area="" asp-controller="Home" asp-action="Contact">Contact Us</a>
                            </li>
                        }
                    </ul>
                    @if (!this.User.IsInRole("Administrator"))
                    {
                        <form asp-controller="Post" asp-action="Profiles" method="get" class="d-flex mx-xxl-4 my-3 my-xxl-0 ps-2">
                            <input name="search" class="form-control me-2" type="search" placeholder="Search for a profile" aria-label="Search">
                            <button class="btn btn-outline-success" style="width: 130px;" type="submit">Search <i class="fa-solid fa-magnifying-glass"></i></button>
                        </form>
                    }
                    
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @DateTime.Now.Year - SocialMedia - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.0.1/js/toastr.js"></script>
    <script src="~/js/active-page.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
