@using SocialMedia.ViewModels.Post
@using System.Security.Claims
@using static SocialMedia.Common.DataConstants.Post

@model PostEditFormModel

@{
    ViewData["Title"] = "Edit Post";
}

<div class="row">
    <div class="col-md-4 offset-md-4">
        <h1 class="text-white text-center display-4">Edit Post</h1>
        <div asp-validation-summary="All" class="text-danger"></div>
        <form asp-controller="Post" asp-action="Edit" method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <div class="textarea-container form-floating">
                    <textarea asp-for="Text" id="textarea-symbols" class="form-control" placeholder="" style="resize: none; height: 250px;"></textarea>
                    <label asp-for="Text" class="form-label"></label>
                    <span id="textarea-counter" data-max-length="@TextMaxLength"></span>
                </div>
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary w-100">Edit Post</button>
        </form>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/textarea-symbols-count.css" />
}

@section Scripts {
    <script src="~/js/textarea-symbols-count.js"></script>
    <partial name="_ValidationScriptsPartial.cshtml" />
}