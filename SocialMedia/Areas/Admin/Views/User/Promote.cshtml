@using SocialMedia.Areas.Admin.ViewModels.User
@model UserViewModel

@{
    ViewData["Title"] = "Promote To Admin";
    bool isEligibleForPromote = (bool)ViewData["IsEligible"]!;
}

<h2 class="display-4 text-white text-center">Promote to Admin</h2>
<div class="text-white p-2" style="background-color: #a0715f; border-radius: 5px;">
    <p>Full Name: @Model.UserFullName</p>
    <p>Username: @Model.UserUsername</p>
    <p>Email: @Model.UserEmail</p>
    <p>JoinedDate: @Model.JoinedDate</p>
    <p>Role: @(Model.UserRole ?? "User")</p>

    @if (isEligibleForPromote)
    {
        <form asp-area="Admin" asp-controller="User" asp-action="Promote" asp-route-id="@Model.UserId" method="post">
            <input hidden asp-for="@Model.UserEmail" />
            <input value="Promote" type="submit" />
        </form>
    }
    else
    {
        <p style="color: darkred;">In order to make an user an admin, user must not have any posts neither liked posts!</p>
    }
</div>