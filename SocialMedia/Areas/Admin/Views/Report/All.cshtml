@using SocialMedia.ViewModels.AdminArea.Report
@model IEnumerable<ReportViewModel>

@{
    ViewData["Title"] = "Reports";
    int rowCount = 1;
}

<form method="get">
    <div class="d-flex gap-3 mb-3">
        <div class="w-100">
            <label class="text-white">Filter:</label>
            <select class="form-select" name="filter">
                <option disabled selected> -- select an option -- </option>
                <option value="ascending">Sort By Reports Count Ascending</option>
                <option value="descending">Sort By Reports Count Descending</option>
            </select>
        </div>
        <div class="align-self-end d-flex gap-3">
            <button class="btn btn-outline-primary" type="submit">Apply</button>
            <a class="btn btn-outline-info" asp-controller="Report" asp-action="All">Clear</a>
        </div>
    </div>
    
</form>

<table class="table table-dark table-striped align-middle">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Full Name</th>
            <th scope="col">Username</th>
            <th scope="col">Reports</th>
            <th scope="col">Post</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var report in @Model)
        {
            <tr>
                <th scope="row">@(rowCount++)</th>
                <td>@report.UserFullName</td>
                <td>@report.UserUsername</td>
                <td>@report.TotalReports</td>
                <td>
                    <a class="btn btn-success"
                       asp-area="Admin"
                       asp-controller="Post"
                       asp-action="Preview"
                       asp-route-id="@report.PostId">
                        View
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>